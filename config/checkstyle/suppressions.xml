<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
    <!-- 排除自动生成的文件 -->
    <suppress files=".*[\\/]target[\\/]generated-sources[\\/].*" checks=".*"/>
    <suppress files=".*[\\/]target[\\/]generated-test-sources[\\/].*" checks=".*"/>
    
    <!-- 排除Application主类的某些检查 -->
    <suppress files=".*Application\.java$" checks="HideUtilityClassConstructor"/>
    <suppress files=".*Application\.java$" checks="MissingJavadocMethod"/>
    
    <!-- 排除DTO类的某些检查 -->
    <suppress files=".*[\\/]dto[\\/].*\.java$" checks="MissingJavadocMethod"/>
    <suppress files=".*[\\/]dto[\\/].*\.java$" checks="MissingJavadocType"/>
    <suppress files=".*[\\/]dto[\\/].*\.java$" checks="VisibilityModifier"/>
    
    <!-- 排除配置类的某些检查 -->
    <suppress files=".*Config\.java$" checks="MissingJavadocMethod"/>
    <suppress files=".*Configuration\.java$" checks="MissingJavadocMethod"/>
    
    <!-- 排除测试类的某些检查 -->
    <suppress files=".*Test\.java$" checks="MagicNumber"/>
    <suppress files=".*Test\.java$" checks="MissingJavadocMethod"/>
    <suppress files=".*Test\.java$" checks="MissingJavadocType"/>
    <suppress files=".*Test\.java$" checks="MultipleStringLiterals"/>
    
    <!-- 排除异常类的构造函数Javadoc检查 -->
    <suppress files=".*Exception\.java$" checks="MissingJavadocMethod"/>
    
    <!-- 排除Controller类的某些检查 -->
    <suppress files=".*Controller\.java$" checks="ClassFanOutComplexity"/>
</suppressions> 