root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 4
max_line_length = 120
continuation_indent_size = 8

[*.gradle]
indent_style = space
indent_size = 4

[gradle-wrapper.properties]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.properties]
indent_style = space
indent_size = 2

[*.xml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bat}]
indent_style = space
indent_size = 2

[.gitignore]
indent_style = space
indent_size = 2

[Dockerfile*]
indent_style = space
indent_size = 2